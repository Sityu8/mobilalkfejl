<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="#FFFFFF">

    <!-- Érkezés cím -->
    <TextView
        android:id="@+id/text_checkin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Érkezés:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Érkezés dátum választó gomb -->
    <Button
        android:id="@+id/btn_checkin"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="Válassz dátumot"
        android:textAllCaps="false"
        android:backgroundTint="#D32F2F"
        android:textColor="#FFFFFF"
        android:elevation="4dp"
        android:layout_marginTop="8dp"
        app:cornerRadius="8dp"
        app:layout_constraintTop_toBottomOf="@id/text_checkin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Távozás cím -->
    <TextView
        android:id="@+id/text_checkout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Távozás:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/btn_checkin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Távozás dátum választó gomb -->
    <Button
        android:id="@+id/btn_checkout"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="Válassz dátumot"
        android:textAllCaps="false"
        android:backgroundTint="#D32F2F"
        android:textColor="#FFFFFF"
        android:elevation="4dp"
        android:layout_marginTop="8dp"
        app:cornerRadius="8dp"
        app:layout_constraintTop_toBottomOf="@id/text_checkout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Fizetendő összeg -->
    <TextView
        android:id="@+id/text_total_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Fizetendő: 0 Ft"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/btn_checkout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
