                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/bubble_background"
                    android:padding="16dp"
                    android:layout_marginEnd="8dp"
                    android:elevation="0dp">

                    <TextView
